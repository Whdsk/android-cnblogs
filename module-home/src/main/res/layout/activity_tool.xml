<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/basic_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginTop="24dp"
                android:text="开发信息"
                android:textColor="@color/dividerPrimary"
                android:textSize="14sp" />

            <LinearLayout
                style="@style/SettingItemStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="接口版本"
                    android:textColor="@color/ph1"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_sdk_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="0"
                    android:textColor="@color/ph3" />

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp"
                android:text="开发操作"
                android:textColor="@color/dividerPrimary"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_reset_sdk"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="36dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="36dp"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_send"
                android:text="恢复默认接口"
                android:textColor="@color/ph1"
                android:textSize="16sp" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>