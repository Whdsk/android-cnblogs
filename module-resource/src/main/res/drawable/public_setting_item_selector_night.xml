<?xml version="1.0" encoding="utf-8"?><!--公共的白色底部分割线背景-->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/dividerColor_night" />
        </shape>
    </item>

    <item>

        <layer-list>
            <!--分割线颜色-->
            <item android:left="36dp">
                <color android:color="@color/dividerColor_night" />
            </item>

            <item android:bottom="0.5dp">
                <color android:color="@color/white_night" />
            </item>
        </layer-list>
    </item>
</selector>