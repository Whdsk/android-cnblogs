<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl_web_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/ll_content_comment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4f000000"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:background="@drawable/bg_dialog_default"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="作者技术水平有限，个性签名无法优化"
                android:textColor="@color/ph1"
                android:textSize="@dimen/h1" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="请在网页上填写自我介绍，然后勾上显示在首页"
                android:textColor="@color/ph1"
                android:textSize="@dimen/h1" />

            <Button
                android:id="@+id/btn_ensure"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/bg_btn_default"
                android:text="我知道了" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>