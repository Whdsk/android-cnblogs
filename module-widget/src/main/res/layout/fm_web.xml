<?xml version="1.0" encoding="utf-8"?>
<com.rae.cnblogs.widget.AppLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ptr_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--用程序添加WebView到FrameLayout中，解决内存溢出问题-->
        <FrameLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ProgressBar
            android:id="@+id/pb_web_view"
            style="@style/progress_bar_web"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:max="100"
            android:progress="0" />
    </RelativeLayout>
</com.rae.cnblogs.widget.AppLayout>